@model List<LaunchCodeCapstone.Models.BlogStyleReview.Tag>


@{
}

<div>
    <h1>Show all Tags</h1>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="Tags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p> No Tags Found! </p>
    }
</div>