@model LaunchCodeCapstone.Models.ViewModels.EditTagRequest
@{
}
<div>

    <div class="container">
        <h1>Edit Tag</h1>
    </div>

    <div class="container py-5">

        @if(Model != null)
        {
            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Id</label>
                    <input type="text" id="id" class="form-control" asp-for="Id" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" id="name" class="form-control" asp-for="Name" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Display Name</label>
                    <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
                </div>

                <div class="mb-3">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-dark">Update</button>

                        <button type="submit" class="btn btn-danger" asp-area="" asp-controller="Tags" asp-action="Delete">Delete</button>
                    </div>

                </div>
            </form>

        }
        else
        {
            <p>Tag Not Found!</p>
        }

     </div>
</div>
