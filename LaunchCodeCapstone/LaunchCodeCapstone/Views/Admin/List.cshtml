@model LaunchCodeCapstone.Models.ViewModels.UserViewModel
@{
}


<div>
    <h1>Displayin Users (Admin)</h1>
</div>


<div>
    <div>
        @if(Model.Users != null || Model.Users.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>
                           
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.EmailAddress</td>
                            <td>
                                <form method="post" asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id">
                                    <button class="btn btn-danger" type="submit">Delete</button>

                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>"No users found"</p>
        }
    </div>
</div>