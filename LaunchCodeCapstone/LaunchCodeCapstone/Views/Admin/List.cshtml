@model LaunchCodeCapstone.Models.ViewModels.UserViewModel
@{
}


<div>
    <h1>Displayin Users (Admin)</h1>
</div>


<div>
    <div>
        @if(Model.Users != null || Model.Users.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <th>@user.Id</th>
                            <th>@user.Username</th>
                            <th>@user.EmailAddress</th>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>"No users found"</p>
        }
    </div>
</div>